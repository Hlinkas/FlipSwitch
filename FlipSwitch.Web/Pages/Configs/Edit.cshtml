@page
@model FlipSwitch.Web.Pages.Configs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Config</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Config.Id" />
            <div class="form-group">
                <label asp-for="Config.Name" class="control-label"></label>
                @Html.DisplayFor(model => model.Config.Name)
            </div>
            <div class="form-group">
                <label asp-for="Config.Value" class="form-check-label"></label>
                @Html.CheckBoxFor(x => x.Config.Value, new { @class = "form-check-input"})
                <span asp-validation-for="Config.Value" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

